<script>
function toggle(id) {
  const el = document.getElementById(id);
  el.classList.toggle('open');
  const btn = el.querySelector('.cat-toggle span:first-child');
  btn.textContent = el.classList.contains('open') ? 'Hide' : 'View';
}
</script>
